@model e_commerce.Models.ProduitAvecDetail
@{
    ViewBag.Title = "DetailleProduit";
}

<div class="detail" style="margin-top:40px;">
    <div class="row" id="contenu_detail">
        <div class="contenu_img">
            <img src="@Url.Content(Model.ImageUrl)" alt="" style="width:650px;height:450px" />
        </div>
        <div class="contenu_text">
            <div class="product-details">
                <h2 class="product-name text-center">@Model.nom</h2>
                <p class="product-price"><strong>Prix :</strong> <span>@Model.prix Ar</span></p>
                <p class="product-description"><strong>Description :</strong> @Model.Description</p>
                <p class="product-quantity"><strong>Quantité disponible :</strong> <span>@Model.qte</span></p>
                <input type="hidden" id="idprod" value="@Model.id_prod" />
                <div class="input-group text-center">
                    <input type="number" id="qte" min="1" max="@Model.qte" value="1" class="quantity-input" />
                    <button type="button" class="btn btn-primary btn-add-cart" onclick="ajouterAuPanier()">Ajouter au panier</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function ajouterAuPanier() {
        var qte = $('#qte').val();
        var idprod = $('#idprod').val();

        $.ajax({
            url: '@Url.Action("SaveCommentContenir", "Produit")',
            type: 'POST',
            data: { qte: qte, idprod: idprod },
            success: function (result) {
                if (result.success) {
                    // SweetAlert pour le succès
                   /* Swal.fire({
                        icon: 'success',
                        title: 'Produit ajouté',
                        text: 'Le produit a été ajouté au panier avec succès.',
                    });*/

                    // Mettre à jour la notification avec la somme des quantités
                    $('.notification p').text(result.sommeQuantites);

                    // Afficher la notification si la quantité totale est supérieure à 0
                    if (result.sommeQuantites > 0) {
                        $('.notification').show();
                    } else {
                        $('.notification').hide();
                    }
                } else {
                    // SweetAlert pour l'erreur (ex: quantité insuffisante)
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: result.message,
                    });
                }
            },
            error: function () {
                // SweetAlert pour l'erreur de communication avec le serveur
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Une erreur est survenue lors de l\'ajout du produit au panier.',
                });
            }
        });
    }
</script>
