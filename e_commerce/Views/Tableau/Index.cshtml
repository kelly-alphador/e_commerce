@model e_commerce.Models.TableauViewModel
@{
    ViewBag.Title = "Tableau de Bord";
    // Utilisez le modèle de vue pour obtenir les informations
    var totalPrixCommandes = Model.TotalPrixCommandes;
    var totalPrixParMois = Model.TotalPrixParMois; // Utilisez le ViewModel
    var totalClients = Model.TotalClients;
    var totalCommande = Model.TotalCommandes;
    var totalProduit = Model.TotalProduits;
}
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="Tableau_bord">
                <div class="tab1">
                    <h3>@totalPrixCommandes</h3>
                    <p>prix total</p>
                </div>
                <div class="tab2">
                    <span>AR</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="Tableau_bord">
                <div class="tab1">
                    <h3>@totalClients</h3>
                    <p>total client</p>
                </div>
                <div class="tab2">
                    <span class="glyphicon glyphicon-user"></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="Tableau_bord">
                <div class="tab1">
                    <h3>@totalCommande</h3>
                    <p>nombre de commande</p>
                </div>
                <div class="tab2">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="Tableau_bord">
                <div class="tab1">
                    <h3>@totalProduit</h3>
                    <p>total produit</p>
                </div>
                <div class="tab2">
                    <span class="glyphicon glyphicon-tag"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Section des graphiques et listes -->
    <div class="row">
        <div class="col-lg-6 col-md-12 mb-4 Tableau_bord_chart">
            <div>
                <canvas id="totalPrixChart" width="400" height="200"></canvas>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 Tableau_bord_list">
            <ul>
                @foreach (var produit in Model.CinqProduitsLesPlusVendus)
                {
                    <li>@produit.NomProduit - @produit.QuantiteVendue unités</li>
                }
            </ul>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4 Tableau_bord_list">
            <ul>
                @foreach (var client in Model.CinqClientsLesPlusFideles)
                {
                    <li>@client.NomClient - @client.NombreCommandes commandes</li>
                }
            </ul>
        </div>
    </div>
</div>








@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('totalPrixChart').getContext('2d');
        var totalPrixChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [
                    @foreach (var mois in totalPrixParMois) {
                        @: '@(mois.Month + "/" + mois.Year)',
                    }
                ],
                datasets: [{
                    label: 'Total des prix par mois',
                    data: [
                        @foreach (var mois in totalPrixParMois) {
                            @: @(mois.TotalPrice),
                        }
                    ],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
